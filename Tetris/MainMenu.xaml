<Page x:Class="Tetris.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Menu Principal" Height="600" Width="800"
      MinWidth="600" MinHeight="600">
    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Start a Game" Width="200" Height="50" Margin="0,10,0,0" Click="PlayGame_Click"/>
            <Button Content="Options" Width="200" Height="50" Margin="0,10,0,0" Click="OpenOptions_Click"/>
            <Button Content="Quit Game" Width="200" Height="50" Margin="0,10,0,0" Click="ExitGame_Click"/>
        </StackPanel>
    </Grid>
</Page>

